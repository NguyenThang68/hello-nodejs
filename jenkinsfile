pipeline {
    agent any
    stages {
        stage('Clone') {
            steps {
                git 'https://github.com/NguyenThang68/hello-nodejs.git'
            }
        }
        stage('Build stage') {
            steps {
                withDockerRegistry(credentialsId: 'docker-hub', url: 'https://index.docker.io/v1/') {
                    sh label: '', script: 'docker build -t thekop68/imagenodejs:v1 .'
                    sh label: '', script: 'docker push -t thekop68/imagenodejs:v1'

                }    
            }
        }
    }
}